{
  "manifest_version": 2,
  "name": "Remember It",
  "description": "Remember the selected Text with just a click",
  "version": "1.0",
  "background" : {
    "scripts":["background.js"]

  },
  "browser_action": {
    "default_icon": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    },
    "default_title": "Remember It"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"

  ]
}
